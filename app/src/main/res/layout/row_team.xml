<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_categories"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/team"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/logo_test" />

        </LinearLayout>

        <LinearLayout
         android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/team_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/cardview_dark_background"
                android:singleLine="true"
                android:text="Title Nes test etstad odpapodjapo"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/team_id"
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/adress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Donec rutrum congue leo eget malesuada sed magna dicapibus."
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
